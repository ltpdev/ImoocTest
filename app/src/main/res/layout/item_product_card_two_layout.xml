<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/item_logo_view"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"/>
    <TextView
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_title_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:layout_alignTop="@+id/item_logo_view"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="微微一笑很优酷"/>
    <TextView
        android:textColor="#ffff4444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/item_title_view"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="$123"/>

    <ImageView
        android:id="@+id/product_photo_view"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/item_logo_view"/>
    <TextView
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_footer_view"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lines="2"
        android:layout_below="@id/product_photo_view"
        android:textSize="16sp"
        android:text="杨洋郑爽“聊”破次元盛,甜蜜演绎《微微一笑很优酷》优酷独家热播中"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_footer_view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#d0d0d0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_from_view"
        android:layout_below="@+id/divider"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="来自北京"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_dark"/>
    <TextView
        android:id="@+id/item_zan_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/divider"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:text="来自北京"
        android:textColor="#bfbfbf"
        android:textSize="15sp"></TextView>
</RelativeLayout>